        }
 
        .layout-content-navbar .layout-page {
            flex-basis: 100%;
            flex-direction: column;
            width: 0;
            min-width: 0;
            max-width: 100%;
        }
        .layout-page {
            display: flex;
            flex: 1 1 auto;
            align-items: stretch;
            padding: 0;
        }

        .layout-page {
            padding-top: 56px !important;
